{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "cleanUrls": true,
    "trailingSlash": true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|mp4|webm|svg|ttf|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "static/**/*.@(jpg|jpeg|gif|png|mp4|webm|js|wasm|vtt)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800,immutable"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "X-Robots-Tag",
            "value": "noindex"
          }
        ]
      },
    ],
    "redirects": [
      {
        "source": "/static/1.0.0-beta.2/:path*",
        "destination": "/static/1/:path*",
        "type": 301
      },
      {
        "source": "/static/1.0.0-rc.1/:path*",
        "destination": "/static/2/:path*",
        "type": 301
      },
      {
        "source": "/static/1.:version/:path*",
        "destination": "/static/3/:path*",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/static/**/*",
        "function": "handleCdnRequests"
      }
    ]
  },
  "functions": {
    "source": "packages/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5002
    },
    "hosting": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
